<UserControl x:Class="FestivalAdministratie.View.Map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:FestivalAdministratie.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.DataContext>
        <ViewModel:MapViewModel/>
    </UserControl.DataContext>
    <Grid Background="#FFE5E5E5">
        <ItemsControl>
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer>
                        <Canvas IsItemsHost="True" Width="{Binding Image.Width, Mode=OneWay}" Height="{Binding Image.Height, Mode=OneWay}">
                            <Canvas.Background>
                                <ImageBrush ImageSource="{Binding Image.UriSource}"/>
                            </Canvas.Background>
                        </Canvas>
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
        <Button Padding="5" Command="{Binding ChooseMapCommand}" Content="Kies festivalmap" HorizontalAlignment="Right" Margin="0,0,30,10" VerticalAlignment="Bottom" />
    </Grid>
</UserControl>
