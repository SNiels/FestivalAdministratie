<UserControl x:Class="FestivalAdministratie.View.RequestStringDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ExplicitButtonStyle}"></Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
                <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="White" FontSize="16" Text="{Binding DialogRequest}" x:Name="txbRequest" Margin="10 0 10 0"  Grid.Row="0" VerticalAlignment="Stretch" />
        <TextBox Text="{Binding DialogResult,UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="2">
            <Button Command="{Binding SubmitDialogResultCommand}" Padding="4 0 4 0" Margin="0 0 10 5" Content="Bevestig" IsDefault="True"/>
            <Button Command="{Binding CancelDialogCommand}" Padding="4 0 4 0" Margin="0 0 10 5"  Content="Annuleer" IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>
