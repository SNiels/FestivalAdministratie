    </Page.Resources>
    <Page.BottomAppBar>
        <AppBar x:Name="PageAppBar" Padding="10,0,10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="LeftCommands" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left">
                    <AppBarButton x:Name="BragButton" HorizontalAlignment="Left" Style="{StaticResource BragAppBarButtonStyle}">
                        <AppBarButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Photo" Click="OnCapturePhoto"/>
                                <MenuFlyoutItem Text="Video" Click="OnCaptureVideo"/>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                    <AppBarButton x:Name="PinRecipeButton" HorizontalAlignment="Left" Style="{StaticResource PinAppBarButtonStyle}" Click="OnPinRecipeButtonClicked"/>
                    <AppBarButton x:Name="ReminderButton" HorizontalAlignment="Left" Style="{StaticResource ReminderAppBarButtonStyle}" Click="OnReminderButtonClicked"/>
                </StackPanel>
                <StackPanel x:Name="RightCommands" Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">

                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid
        Style="{StaticResource LayoutRootStyle}"
        DataContext="{Binding Group}"
        d:DataContext="{Binding AllGroups[0], Source={d:DesignInstance Type=data:OptredenDataSource, IsDesignTimeCreatable=True}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--
            The remainder of the page is one large FlipView that displays details for
            one item at a time, allowing the user to flip through all items in the chosen
            group
        -->
        <FlipView
            Visibility="Visible"
            Height="{Binding ElementName=pageRoot,Path=ActualHeight}"
            UseTouchAnimationsForAllNavigation="True"
            x:Name="flipView"
            AutomationProperties.AutomationId="ItemsFlipView"
            AutomationProperties.Name="Item Details"
            TabIndex="1"
            Grid.RowSpan="2"
            ItemsSource="{Binding Source={StaticResource itemsViewSource}}">

            <FlipView.ItemTemplate>
                <DataTemplate>
                    <UserControl Loaded="StartLayoutUpdates" Unloaded="StopLayoutUpdates">
                        <Hub VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="40,60,40,120" >
                            <Hub.Background>
                                <ImageBrush ImageSource="{Binding Band.Picture}" Stretch="UniformToFill" AlignmentX="Center"/>
                            </Hub.Background>
                            <HubSection  Width="1400" Padding="30,0,30,10" VerticalContentAlignment="Bottom">
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,30">
                                        <HyperlinkButton Margin="5" Padding="5" Width="60" Height="60" Content="" NavigateUri="{Binding Band.Facebook}" >
                                            <HyperlinkButton.Background>
                                                <ImageBrush Stretch="Uniform" ImageSource="Assets/FB-f-Logo__blue_100.png"/>
                                            </HyperlinkButton.Background>
                                        </HyperlinkButton>
                                        <HyperlinkButton Margin="5" Padding="5" Width="60" Height="60" Content="" NavigateUri="{Binding Band.Twitter}" >
                                            <HyperlinkButton.Background>
                                                <ImageBrush Stretch="Uniform" ImageSource="Assets/twitter.png"/>
                                            </HyperlinkButton.Background>
                                        </HyperlinkButton>
                                    </StackPanel>
                                </DataTemplate>
                            </HubSection>

                            <HubSection IsHeaderInteractive="True"  
                Background="#CC490C2E" Width="800" Padding="30,0,30,10">
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontSize="42"  FontWeight="ExtraLight" Text="{Binding Band.Name}" Margin="0,0,0,30"/>
                                        <TextBlock FontSize="36"  FontWeight="ExtraLight" Text="Beschrijving" Margin="0,0,0,20"/>
                                        <TextBlock FontSize="16" Text="{Binding Band.Description}"
                           Style="{ThemeResource BodyTextBlockStyle}" />
                                    </StackPanel>
                                </DataTemplate>
                            </HubSection>

                            <HubSection IsHeaderInteractive="True"  
                Background="{StaticResource SOrange}" MinWidth="600" Padding="30,85,30,10">
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontSize="36" FontWeight="ExtraLight" Text="Optredens"/>
                                        <ItemsControl x:Name="optredensControl" ItemsSource="{Binding Band.Optredens}">
                                            <StackPanel/>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Loaded="Button_Loaded" Click="Optreden_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <StackPanel.Resources>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                                                </Style>
                                                            </StackPanel.Resources>
                                                            <TextBlock Text="{Binding From,Converter={StaticResource DagConverter}}"/>
                                                            <TextBlock Text="{Binding From,Converter={StaticResource StringFormatConverter},ConverterParameter='{}{0:HH:mm}'}"/>
                                                            <TextBlock Text=" - "/>
                                                            <TextBlock Text="{Binding Until,Converter={StaticResource StringFormatConverter},ConverterParameter='{}{0:HH:mm}'}"/>
                                                            <TextBlock Margin="0" Text="@"/>
                                                            <TextBlock Text="{Binding Stage.Name}"/>
                                                            <TextBlock Text="Stage"/>
                                                        </StackPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <TextBlock FontSize="36" FontWeight="ExtraLight" Text="Genres" Margin="0,30,0,0"/>
                                        <ListView ItemsSource="{Binding Band.Genres}" Width="400">
                                            <ListView.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapGrid Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>

                                            </ListView.ItemsPanel>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Width="120" Click="Genre_Click" Content="{Binding Name}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ListView>


                                    </StackPanel>
                                </DataTemplate>
                            </HubSection>
                        </Hub>
