            </FlipView.ItemTemplate>
        </FlipView>
        <!-- FlipView used in portrait mode -->
        <FlipView
    x:Name="portraitFlipView"
    AutomationProperties.AutomationId="ItemsFlipView"
    AutomationProperties.Name="Item Details"
    Grid.Row="0"
            Grid.RowSpan="2"
    Padding="0"
    ItemsSource="{Binding Source={StaticResource itemsViewSource}}"
    Visibility="Collapsed" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="0">

            <FlipView.ItemTemplate>
                <DataTemplate>
                    <UserControl Loaded="StartLayoutUpdates" Unloaded="StopLayoutUpdates">
                        <Hub Padding="0,120,0,0" Margin="0" Orientation="Vertical" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" >
                            <Hub.Background>
                                <ImageBrush ImageSource="{Binding Band.Picture}" Stretch="UniformToFill" AlignmentX="Center"/>
                            </Hub.Background>
                            <HubSection Height="500" Padding="30,0,30,10" VerticalContentAlignment="Bottom">
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,0">
                                        <HyperlinkButton Margin="5" Padding="5" Width="60" Height="60" Content="" NavigateUri="{Binding Band.Facebook}" >
                                            <HyperlinkButton.Background>
