@using FestivalSite.Helpers
@model IEnumerable<FestivalLibAdmin.Model.Optreden>
@if(Model!=null&&Model.Count()>0)
{ 
    <section class="optredens">
    @foreach (var optreden in Model)
        {
        <a href="@Url.Action("Details","Band",new{name=optreden.Band.Name})">
            <div class="optreden card" style="background-image:url('@optreden.Band.Picture')">
                <span>@optreden.Band.Name</span>
                @Html.Action("OptredensPartial", "Band", new { bandID=optreden.BandID})
                @*<span>@optreden.From.BeDayOfWeek() @Html.DisplayFor(modelItem => optreden.From) - @Html.DisplayFor(modelItem =>optreden.Until) </span>*@
            </div>
        </a>
        }
        
    </section>
}