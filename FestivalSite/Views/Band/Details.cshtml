@model FestivalLibAdmin.Model.Band

@{
    ViewBag.Title = @Model.Name;
}
<section class="breadcrumb">
@Html.MvcSiteMap().SiteMapPath()
</section>
<article class="clearfix">
    <img src="@Model.Picture" class="card" />

    <h2>@Model.Name</h2>
    <section>
        <div class="card">
            <h3>Beschrijving</h3>
            <p>
                @Html.Encode(Model.Description)
            </p>
        </div>
        <div class="card" style="float:right;clear:right">
            <h3>Optredens</h3>
            @Html.Action("OptredensPartial", new { bandID = Model.ID })
        </div>
        <div class="card" style="float:right;clear:right;">
            <h3>Genres</h3>
            @Html.Action("GenresPartial", new { bandID = Model.ID })
        </div>
        <div class="social card" style="float:right;clear:right;">
            <h3>Social</h3>
            @if (Model.Facebook != null) { 
            <a class="fb" href="@Model.Facebook" target="_blank">
            </a>
            }
            @if (Model.Twitter != null) { 
            <a class="twitter" href="@Model.Twitter" target="_blank">
            </a>
            }
        </div>
        
        
        
    </section>
</article>
